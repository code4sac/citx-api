<h1>Listing geographies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @geographies.each do |geography| %>
      <tr>
        <td><%= geography.name %></td>
        <td><%= geography.description %></td>
        <td><%= link_to 'Show', geography %></td>
        <td><%= link_to 'Edit', edit_geography_path(geography) %></td>
        <td><%= link_to 'Destroy', geography, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Geography', new_geography_path %>
